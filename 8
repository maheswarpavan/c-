


/*
Write a C# Sharp program to check if a given positive number is a multiple of 3 or 7.

Sample Input:
3
14
12
37
Expected Output:
True
True
True
False
*/
namespace SIVA
{
    class Program
    {
        static void Main(string[] args)
        {
            do
            {
                int a = Math.Abs(Convert.ToInt32(Console.ReadLine()));       
                    Console.WriteLine(program(a));
            }
            while(true);

        }

            static bool program(int a)
            {
            if((a%3==0)|| (a % 7 == 0))
            return true;
            else return false;
        } 
        }
   
        

    
}
