


/*
Write a C# Sharp program to check if a string 'yt' appears at index 1 in a given string. If it appears return a string without 'yt' otherwise return the original string.

Sample Input:
"Python"
"ytade"
"jsues"
Expected Output:
Phon
ytade
jsues
*/
namespace SIVA
{
    class Program
    {
        static void Main(string[] args)
        {
            do
            {
                string a = (Console.ReadLine());
              //  Console.WriteLine(a.Substring(1, 3));
                    Console.WriteLine(program(a));
            }
            while(true);

        }

            static string program(string a)
            {
            if ( (a.Substring(1, 2) == "yt"))
            
                return a.Remove(1, 2);
            else return a;
          
            } 
        }
   
        

    
}
